<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullScreenVideoTheme" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="TextStyleRobotoBold">
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextStyleRobotoMedium">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextStyleRobotoRegular">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="DialogScaleAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_scale_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_scale_out</item>
    </style>

    <style name="TitleBarLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/title_bar_margin_top_status_bar</item>
        <item name="android:layout_marginBottom">@dimen/title_bar_margin_bottom_seperate_line</item>
        <item name="android:paddingLeft">@dimen/title_bar_margin_left</item>
        <item name="android:paddingRight">@dimen/title_bar_margin_right</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="TitleBarContentTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/title_bar_content_text_size</item>
    </style>

    <style name="FacebookLoginTheme" parent="android:Theme.Translucent.NoTitleBar">
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimAmount">0.8</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:progressBarStyle">@style/InvisibleProgress</item>
    </style>

    <style name="InvisibleProgress">
        <item name="android:visibility">gone</item>
    </style>

</resources>
